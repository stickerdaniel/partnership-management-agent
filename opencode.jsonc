{
	"$schema": "https://opencode.ai/config.json",
	"default_agent": "plan",
	"model": "anthropic/claude-opus-4-6",
	// "model": "google/antigravity-claude-opus-4-6",
	// "model": "github-copilot/claude-opus-4-6",
	"plugin": [
		//"@nick-vi/opencode-type-inject",
		"opencode-antigravity-auth"
	],
	"mcp": {
    "notion": {
      "type": "local",
      "command": ["bunx", "mcp-remote", "https://mcp.notion.com/mcp"],
      "enabled": true
    },
    "google-workspace": {
      "type": "local",
      "command": [
        "sh",
        "-c",
        "C=google-credentials.json GOOGLE_OAUTH_CLIENT_ID=$(bun -e \"const c=require('./$C').installed;process.stdout.write(c.client_id)\") GOOGLE_OAUTH_CLIENT_SECRET=$(bun -e \"const c=require('./$C').installed;process.stdout.write(c.client_secret)\") USER_GOOGLE_EMAIL=$GOOGLE_EMAIL OAUTHLIB_INSECURE_TRANSPORT=1 uvx workspace-mcp"
      ],
      "enabled": true
    },
    "linkedin": {
      "type": "local",
      "command": ["uvx", "linkedin-scraper-mcp"],
      "enabled": true
    }
	},
	"provider": {
		"google": {
			"models": {
				"antigravity-gemini-3-pro": {
					"name": "Gemini 3 Pro (Antigravity)",
					"limit": {
						"context": 1048576,
						"output": 65535
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingLevel": "low"
						},
						"high": {
							"thinkingLevel": "high"
						}
					}
				},
				"antigravity-gemini-3-flash": {
					"name": "Gemini 3 Flash (Antigravity)",
					"limit": {
						"context": 1048576,
						"output": 65536
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"minimal": {
							"thinkingLevel": "minimal"
						},
						"low": {
							"thinkingLevel": "low"
						},
						"medium": {
							"thinkingLevel": "medium"
						},
						"high": {
							"thinkingLevel": "high"
						}
					}
				},
				"antigravity-claude-sonnet-4-6": {
					"name": "Claude Sonnet 4.6 (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"antigravity-claude-sonnet-4-6-thinking": {
					"name": "Claude Sonnet 4.6 Thinking (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingConfig": {
								"thinkingBudget": 8192
							}
						},
						"max": {
							"thinkingConfig": {
								"thinkingBudget": 32768
							}
						}
					}
				},
				"antigravity-claude-opus-4-6-thinking": {
					"name": "Claude Opus 4.6 Thinking (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingConfig": {
								"thinkingBudget": 8192
							}
						},
						"max": {
							"thinkingConfig": {
								"thinkingBudget": 32768
							}
						}
					}
				}
			}
		}
	}
}
